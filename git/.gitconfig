[push]
  default = upstream
[user]
  name = larribas
  email = lorenzo.s.arribas@gmail.com
[core]
  editor = nvim
  excludesfile = ~/.gitignore_global
[advice]
  statusHints = false
[alias]
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  dl = "!git ll -1"
  dlc = diff --cached HEAD^
  cp = cherry-pick
  st = status -s
  cl = clone
  ci = commit
  co = checkout
  br = branch 
  diff = diff --word-diff
  dc = diff --cached
  r = reset
  r1 = reset HEAD^
  r2 = reset HEAD^^
  rh = reset --hard
  rh1 = reset HEAD^ --hard
  rh2 = reset HEAD^^ --hard
  ca = commit -a --amend --no-edit
  pf = push --force
